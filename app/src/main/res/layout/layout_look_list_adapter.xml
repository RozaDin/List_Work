<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|left|center_horizontal"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_flare_black_24dp" />

    <TextView
        android:id="@+id/textView_adapter_look_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:textColor="#010101"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/button_edit_look_list"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_edit_black_24dp" />
    <ImageButton
        android:id="@+id/button_delete_look_list"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"/>

</LinearLayout>
